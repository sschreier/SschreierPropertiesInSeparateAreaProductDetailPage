{% sw_extends '@Storefront/storefront/component/buy-widget/buy-widget-form.html.twig' %}

{% block buy_widget_buy_form_inner %}
    {% block buy_widget_buy_form_inner_propertiesinseparateareaproductdetailpage_before %}{% endblock %}

    {% if config('SschreierPropertiesInSeparateAreaProductDetailPage.config.showPropertiesIn') === "modal" and config('SschreierPropertiesInSeparateAreaProductDetailPage.config.positionLinkToModal') === "above_buy_button" %}
        {% set additionalCssClass = "link-above-buy-button" %}

        {% block buy_widget_buy_form_inner_propertiesinseparateareaproductdetailpage_custom_properties_link_to_open_modal %}
            {% sw_include '@SschreierPropertiesInSeparateAreaProductDetailPage/storefront/custom/modal/properties-link-to-open-modal.html.twig' with {
                additionalCssClass: additionalCssClass,
                product: element.data.product,
                showIcon: false
            } %}
        {% endblock %}
    {% endif %}

    {% block buy_widget_buy_form_inner_propertiesinseparateareaproductdetailpage_default_before %}{% endblock %}

    {{ parent() }}

    {% block buy_widget_buy_form_inner_propertiesinseparateareaproductdetailpage_after %}{% endblock %}
{% endblock %}
